@using System.Data
@using System.Web.Helpers
@using CRM_Core.Infrastructure;
@{
    List<SelectListItem> potentialItems = ViewBag.PotentialItems;
    List<SelectListItem> introductionTypesItems = ViewBag.IntroductionTypesItems;
    List<SelectListItem> marriedItems = ViewBag.MarriedItems;
    List<SelectListItem> gradationsItems = ViewBag.GradationsItems;
    List<SelectListItem> categoriesItems = ViewBag.CategoriesItems;
    List<SelectListItem> prefixesItems = ViewBag.PrefixesItems;

    <div class="modal fade" id="form-peopleSearch" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" style="width:247%; margin-right:-400px;overflow:auto;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@UI_Presentation.wwwroot.Resources.People.Title.Intorduction</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <short-TextBox id="txtNameSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Name"></short-TextBox>
                            <short-TextBox id="txtFamilySearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Family"></short-TextBox>
                            <DateTime-TextBox id="txtFromBirthDaySearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.FromBirthDay"></DateTime-TextBox>
                            <DateTime-TextBox id="txtToBirthDaySearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.ToBirthDay"></DateTime-TextBox>
                            <short-TextBox id="txtFromAgeSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.FromAge"></short-TextBox>
                            <short-TextBox id="txtToAgeSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.ToAge"></short-TextBox>
                        </div>

                        <div class="col-12 col-sm-6">
                            <dropDown id="cmbPotentialSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Potential" drop-down-data-bound="@potentialItems"></dropDown>
                            <dropDown id="cmbIntroductionTypeSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.AcquaintanceType" drop-down-data-bound="@introductionTypesItems"></dropDown>
                            <dropDown id="cmbMariedTypeSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.IsMarried" drop-down-data-bound="@marriedItems"></dropDown>
                            <dropDown id="cmbGradationsSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Graduation" drop-down-data-bound="@gradationsItems"></dropDown>
                            <dropDown id="cmbCategoriesSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Category" drop-down-data-bound="@categoriesItems"></dropDown>
                            <dropDown id="cmbPrefixesSearch" label-title="@UI_Presentation.wwwroot.Resources.People.Title.Prefix" drop-down-data-bound="@prefixesItems"></dropDown>
                        </div>

                        <div class="col-12 d-flex flex-sm-row flex-column justify-content-end mt-1">
                            <Icon-Button buttom-class="btn btn-success  btn-radious" icon="bx bx-search" title="@UI_Presentation.wwwroot.Resources.Buttons.Title.Search" on-click-event="@string.Format("showPeopleList('{0}','{1}')", "false", "isEditMode")"></Icon-Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <search-header>
        <Search-Botton>
            <modal-buttom modal-id="form-peopleSearch"  title=" @UI_Presentation.wwwroot.Resources.General.Title.Search"></modal-buttom>
        </Search-Botton>

        @*<Search-TextBox>
                <Search-Grid-TextBox placeholder="@UI_Presentation.wwwroot.Resources.People.Title.FullName" on-click-action="@string.Format("showPeopleList('{0}','{1}')", "true", "isEditMode")"> </Search-Grid-TextBox>
            </Search-TextBox>*@
    </search-header>

    <div id="peopleList">
        @await Html.PartialAsync("~/Views/People/FillPeopleTableData.cshtml")
    </div>
}

<script>
        $(".txtDate").datepicker({
            dateFormat: './dd/mm/yy.html',
            dateFormat: 'yy/mm/dd',
            altField: '#alternate2',
            altFormat: 'DD، d MM yy'
        });
</script>