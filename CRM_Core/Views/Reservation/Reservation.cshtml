@using CRM_Core.Application.GridViewModels
@using CRM_Core.Application.ViewModels.CustomViewModel

@model DataGridViewModel<ReservationViewModel>

@{
    bool isEditMode = ViewBag.isEditMode;
    bool isSelectedMode = ViewBag.isSelectedMode;
    bool isPrintMode = ViewBag.isPrintMode;
    int rowNum = 1;

    <modal bodystyle="height:200px" title="@UI_Presentation.wwwroot.Resources.Reservation.Title.ReservationSearch" id="form-reservationSearch">
        <modal-body>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
            <short-TextBox label-title="نام" place-holder="نام"></short-TextBox>
        </modal-body>
       
        <modal-footer dismiss-text="@UI_Presentation.wwwroot.Resources.Buttons.Title.Cancel"></modal-footer>
    </modal>

    <br />
    <search-header>
        <Search-Botton>
            <Icon-Button buttom-class="btn btn-info btn-round btnSearchGrid" icon="fa fa-search" title="افزودن" on-click-event="showPeopleList()"></Icon-Button>
            <modal-buttom modal-id="form-reservationSearch" title=" @UI_Presentation.wwwroot.Resources.General.Title.Search"></modal-buttom>
        </Search-Botton>

        <Search-TextBox>
            <Search-Grid-TextBox placeholder="نام - نام خانوادگی مشتری "> </Search-Grid-TextBox>
        </Search-TextBox>

    </search-header>

    <grid-view>
        <gridView-header>
            <grid-headerFields width="50" header-field-name="ردیف"></grid-headerFields>
            <grid-headerFields width="180" header-field-name="نام مشتری"></grid-headerFields>
            <grid-headerFields header-field-name="کد سیستمی"></grid-headerFields>
            <grid-headerFields header-field-name="تاریخ نویت"></grid-headerFields>
            <grid-headerFields header-field-name="از ساعت"></grid-headerFields>
            <grid-headerFields header-field-name="تا ساعت"></grid-headerFields>
            <grid-headerFields header-field-name="قیمت"></grid-headerFields>
            <grid-headerFields header-field-name="نوع پرداخت"></grid-headerFields>
            <grid-headerFields width="250" header-field-name="خدمات"></grid-headerFields>
        </gridView-header>


        <gridView-body>
            @foreach (var item in Model.Records.ToList())
            {
                <grid-rows-body>
                    <grid-rows-data visible="false" field-value="@item.PeopleId"></grid-rows-data>
                    <grid-rows-data field-value="@rowNum"></grid-rows-data>
                    <grid-rows-data field-value="@item.FullName"></grid-rows-data>
                    <grid-rows-data field-value="@item.SystemCode"></grid-rows-data>
                    <grid-rows-data field-value="@item.ReservationDate"></grid-rows-data>
                    <grid-rows-data field-value="@item.FromTime"></grid-rows-data>
                    <grid-rows-data field-value="@item.ToTime"></grid-rows-data>
                    <grid-rows-data field-value="@item.Price"></grid-rows-data>
                    <grid-rows-data field-value="@item.PayType"></grid-rows-data>
                    <grid-rows-data field-value="@item.TBASServicesValues"></grid-rows-data>
                </grid-rows-body>
                rowNum = rowNum + 1;
            }
        </gridView-body>

        <gridView-footer>
            <grid-footer-dataItem title="تعداد کل " value="124"></grid-footer-dataItem>
            <grid-footer-dataItem title=" کل خدمات " value="124"></grid-footer-dataItem>
            <grid-footer-dataItem title=" تعداد مشتری واقعی " value="124"></grid-footer-dataItem>
            <grid-footer-dataItem title=" تعداد مشتری واقعی " value="124"></grid-footer-dataItem>
            <grid-footer-dataItem title=" تعداد مشتری واقعی " value="124"></grid-footer-dataItem>
        </gridView-footer>
    </grid-view>
}

<script>
    concatColonToLables();

    $(".txtDate").datepicker({
        dateFormat: './dd/mm/yy.html',
        dateFormat: 'yy/mm/dd',
        altField: '#alternate2',
        altFormat: 'DD، d MM yy'
    });

</script>


