

@{


    <modal bodystyle="height:200px" title="@UI_Presentation.wwwroot.Resources.Reservation.Title.ReservationSearch" id="form-reservationSearch">
        <modal-body>
            <short-TextBox id="txtcustomerName" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.CustomerName"></short-TextBox>
            <short-TextBox id="txtCustomerFamily" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.CustomerFamily"></short-TextBox>
            <short-TextBox id="cmbServiceType" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.ServiceType"></short-TextBox>
            <short-TextBox is-date-type="true" id="txtDate" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.Date"></short-TextBox>
            <short-TextBox id="txtFromTime" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.FromTimeOrder"></short-TextBox>
            <short-TextBox id="txtToTime" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.ToTimeOrder"></short-TextBox>
            <short-TextBox id="txtReservationSystemCode" label-title="@UI_Presentation.wwwroot.Resources.Reservation.Title.ReservationSystemCode"></short-TextBox>
            <customChild-tag style="text-align: left;">
                <customTag-children>
                    <Icon-Button buttom-class="btn btn-success  btn-radious" icon="fa fa-search" title="@UI_Presentation.wwwroot.Resources.Buttons.Title.Search" on-click-event="@string.Format("showReservationList('{0}','{1}')","false","isEditMode")"></Icon-Button>
                </customTag-children>
            </customChild-tag>
        </modal-body>

        <modal-footer dismiss-text="@UI_Presentation.wwwroot.Resources.Buttons.Title.Cancel"></modal-footer>
    </modal>

    <br />
    <search-header>
        <Search-Botton>
            <Icon-Button buttom-class="btn btn-success btn-round btnSearchGrid" icon="icon-plus" title="@UI_Presentation.wwwroot.Resources.Buttons.Title.Add" on-click-event="showReservationList()"></Icon-Button>
            <modal-buttom modal-id="form-reservationSearch" title=" @UI_Presentation.wwwroot.Resources.General.Title.Search"></modal-buttom>
        </Search-Botton>

        <Search-TextBox>
            <Search-Grid-TextBox placeholder="@UI_Presentation.wwwroot.Resources.People.Title.FullName" on-click-action="@string.Format("showReservationList('{0}','{1}')","true","isEditMode")"> </Search-Grid-TextBox>
        </Search-TextBox>
    </search-header>

    <customChild-tag id="ReservationList">
        <customTag-children>
            @await Html.PartialAsync("~/Views/Reservation/FillReservationTableData.cshtml")
        </customTag-children>
    </customChild-tag>

}

<script>
    concatColonToLables();

    $(".txtDate").datepicker({
        dateFormat: './dd/mm/yy.html',
        dateFormat: 'yy/mm/dd',
        altField: '#alternate2',
        altFormat: 'DD، d MM yy'
    });

</script>


