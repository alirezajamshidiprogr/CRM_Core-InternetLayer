
<div class="titleForm">@ViewBag.Title</div>
<br />
<div class="divformControl" style="margin-top:20px;">
    <div class="col-lg-12">

        <table class="tblFields">
            <tr>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.ReminderTitle, null, new { @class = "labelWidget" }) </td>
                <td>@Html.TextBox("txtReminderTitle", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.ReminderTitle })</td>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.Date, null, new { @class = "labelWidget" }) </td>
                <td>@Html.TextBox("txtDate", null, new { @class = "form-control txtDate", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.Date })</td>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.Time, null, new { @class = "labelWidget" }) </td>
                <td>@Html.TextBox("txtTime", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.Time })</td>
            </tr>
            <tr>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.Repeated, null, new { @class = "labelWidget" }) </td>
                <td>@Html.TextBox("txtRepeated", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.Repeated })</td>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.SendTo, null, new { @class = "labelWidget" }) </td>
                <td>@Html.TextBox("txtSendTo", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.SendTo })</td>
            </tr>
            <tr>
                <td>@Html.Label(@UI_Presentation.wwwroot.Resources.People.Title.Description, null, new { @class = "labelWidget" }) </td>
                <td colspan="6">@Html.TextBox("txtDescription", null, new { @class = "TextArea", style = "width:829px !important;", placeholder = @UI_Presentation.wwwroot.Resources.People.Title.Description })</td>
            </tr>
        </table>
    </div>


    <table class="tblButons">
        <tr>
            <td><button type="button" id="btnAddEditPeople" onclick="btnAddEditPeople()" class="btn btn-primary">@UI_Presentation.wwwroot.Resources.Buttons.Title.Add</button></td>
            <td><button type="button" id="btnCloseAddEditPeople" class="btn btn-danger">@UI_Presentation.wwwroot.Resources.Buttons.Title.Cancel</button></td>
        </tr>
    </table>
    </div>

    <script>
        concatColonToLables();
        $(".txtDate").datepicker({
            dateFormat: './dd/mm/yy.html',
            dateFormat: 'yy/mm/dd',
            altField: '#alternate2',
            altFormat: 'DD، d MM yy'
        });
    </script>
