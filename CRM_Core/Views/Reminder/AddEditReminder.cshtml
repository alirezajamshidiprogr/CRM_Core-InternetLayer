
<link href="~/plugins/clockpicker/dist/bootstrap-clockpicker.min.css" rel="stylesheet" />
<script src="~/plugins/clockpicker/dist/bootstrap-clockpicker.min.js"></script>


@model CRM_Core.Entities.Models.Reminder
@{ bool isEdit = ViewBag.isEditMode == null ? false : (bool)ViewBag.isEditMode; }
<customChild-tag class="titleForm">
    <customTag-children>
        @ViewBag.Title
    </customTag-children>
</customChild-tag>
<br />
<customChild-tag>
    <customTag-children>
        @Html.Hidden("salonId", Model != null ? Model.Id : 0)
        <long-TextBox id="txtReminderTitle" required="true" label-title="@UI_Presentation.wwwroot.Resources.Reminder.Title.ReminderTitle" value="@(isEdit ? Model.ReminderTitle : string.Empty)"></long-TextBox>
        <long-TextBox width="200px" id="txtDate" is-date-type="true" label-title="@UI_Presentation.wwwroot.Resources.Reminder.Title.Date" value="@(isEdit ? Model.F_RegisterDate : string.Empty)"></long-TextBox>
        <long-time-TextBox id="txtTime" label-title="@UI_Presentation.wwwroot.Resources.Reminder.Title.Time" value="@(isEdit ? Model.Time : string.Empty)"></long-time-TextBox>
        <dropDown is-long-form="true" width="194" id="cmbSendTo" onchange-drop-down="" label-title="@UI_Presentation.wwwroot.Resources.General.Title.Personel"></dropDown>
        <Text-Area id="txtDescription" label-title=" @UI_Presentation.wwwroot.Resources.People.Title.Description" value="@(isEdit ? Model.Description : string.Empty)"></Text-Area>
        <checkBox id="chbRepeated" title="@UI_Presentation.wwwroot.Resources.Reminder.Title.Repeated"></checkBox>
    </customTag-children>
</customChild-tag>

<div id="divDays" style="padding:20px;border:1px solid #b7acac;border-radius:12px;height:85px;margin-top:73px;display:none;">
    <checkBox id="chbSat" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Satuarday"></checkBox>
    <checkBox id="chbSun" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Sunday"></checkBox>
    <checkBox id="chbMon" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Monday"></checkBox>
    <checkBox id="chbThu" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Thursday"></checkBox>
    <checkBox id="chbWens" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Wensday"></checkBox>
    <checkBox id="chbTue" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Tuesday"></checkBox>
    <checkBox id="chbFri" is-shor-check-box="true" title="@UI_Presentation.wwwroot.Resources.General.Title.Friday"></checkBox>
</div>

<form-buttons form-name="Reminder" confirm-button-title="@UI_Presentation.wwwroot.Resources.Buttons.Title.Register"></form-buttons>
<script>
    concatColonToLables();
    $(".txtDate").datepicker({
        dateFormat: './dd/mm/yy.html',
        dateFormat: 'yy/mm/dd',
        altField: '#alternate2',
        altFormat: 'DD، d MM yy'
    });

</script>

