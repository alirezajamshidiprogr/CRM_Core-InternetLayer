@{
    <div class="titleForm">@ViewBag.Title</div>
    <br />
    <ul class="nav nav-tabs nav-rtl">
        <li class="active"><a data-toggle="tab" href="#GeneralInfo">@UI_Presentation.wwwroot.Resources.Role.Title.RoleFields </a></li>
        <li><a data-toggle="tab" href="#RoleDocuments"> @UI_Presentation.wwwroot.Resources.Role.Title.Documents </a> </li>
    </ul>
    <div class="divformControl" style="margin-top:20px;">
        <div class="col-lg-12">

            <div id="GeneralInfo" class="tab-pane fade">
                <table class="tblFields">
                    <tr>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Role.Title.RoleType, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtRoleType", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Role.Title.RoleType })</td>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Role.Title.RoleTitle, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtRoleTitle", null, new { @class = "form-control txtDate", placeholder = @UI_Presentation.wwwroot.Resources.Role.Title.RoleTitle })</td>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Role.Title.RelativePersonel, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtRelativePersonel", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Role.Title.RelativePersonel })</td>
                    </tr>
                    <tr>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.Date, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtDate", null, new { @class = "form-control txtDate", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.Date })</td>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Reminder.Title.Time, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtTime", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Reminder.Title.Time })</td>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.Role.Title.Priority, null, new { @class = "labelWidget" }) </td>
                        <td>@Html.TextBox("txtRelativePriority", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.Role.Title.Priority })</td>
                    </tr>
                    <tr>
                        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.People.Title.Description, null, new { @class = "labelWidget" }) </td>
                        <td colspan="6">@Html.TextBox("txtDescription", null, new { @class = "TextArea", style = "width:829px !important;", placeholder = @UI_Presentation.wwwroot.Resources.People.Title.Description })</td>
                    </tr>
                </table>
            </div>

            <div id="RoleDocuments" class="tab-pane fade">
                <table class="tblFields">
                    <tr>

                    </tr>
                </table>
            </div>

        </div>

            <table class="tblButons">
                <tr>
                    <td><button type="button" id="btnAddEditPeople" onclick="btnAddEditPeople()" class="btn btn-primary">@UI_Presentation.wwwroot.Resources.Buttons.Title.Add</button></td>
                    <td><button type="button" id="btnCloseAddEditCusomter" class="btn btn-danger">@UI_Presentation.wwwroot.Resources.Buttons.Title.Cancel</button></td>
                </tr>
            </table>
        </div>
}
<script>
    concatColonToLables();
    $(".txtDate").datepicker({
        dateFormat: './dd/mm/yy.html',
        dateFormat: 'yy/mm/dd',
        altField: '#alternate2',
        altFormat: 'DD، d MM yy'
    });
</script>
