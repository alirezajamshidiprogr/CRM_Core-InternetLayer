<div class="divManagment">تعیین دسترسی منوها</div>
<table class="table table-fixed tblFields">
    <tr>
        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.General.Title.UserName, null, new { @class = "labelWidget" }) </td>
        <td>@Html.TextBox("txtAdminUserName", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.People.Title.Name })</td>
        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.General.Title.Password, null, new { @class = "labelWidget" }) </td>
        <td>@Html.Password("txtAdminPassword", null, new { @class = "form-control", placeholder = @UI_Presentation.wwwroot.Resources.People.Title.Name })</td>
        <td>
            <button onclick="getUserMenuInfo()" class="btn btn-info ladda-button" data-style="expand-left">
                <span class="ladda-label">@UI_Presentation.wwwroot.Resources.Buttons.Title.Proccess</span>
                <span class="ladda-spinner"></span><div class="paper-ripple">
                    <div class="paper-ripple__background" style="opacity: 0;">
                    </div>
                    <div class="paper-ripple__waves"></div>
                </div><div class="ladda-progress" style="width: 0px;"></div>
            </button>
        </td>
        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.General.Title.Users, null, new { @class = "labelWidget" }) </td>
        <td><select class="comboBox" id="cmbUsers" onchange="onChangeCmbUser()" style="width:180px !important;"> <option></option> </select> </td>
    </tr>
    <tr id="trDate" style="display:none; ">
        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.General.Title.FromDate, null, new { @class = "labelWidget" }) </td>
        <td>@Html.TextBox("txtFromDate", null, new { @class = "form-control txtDate", masked = "Date", placeholder = @UI_Presentation.wwwroot.Resources.General.Title.FromDate })</td>
        <td>@Html.Label(@UI_Presentation.wwwroot.Resources.General.Title.FromDate, null, new { @class = "labelWidget" }) </td>
        <td>@Html.TextBox("txtToDate", null, new { @class = "form-control txtDate", masked = "Date", placeholder = @UI_Presentation.wwwroot.Resources.General.Title.ToDate })</td>
    </tr>
</table>

<div class="container-fluid">
        <div class="row">
            <div class="col-lg-1"></div>
            <div id="headerMenus" style="background:#7fcac4;" class="col-lg-3 headerMenus"><span>@UI_Presentation.wwwroot.Resources.General.Title.MainMenu</span></div>
            <div id="headerMenus" style="background-color: #b8d7d4;" class="col-lg-3 headerMenus">@UI_Presentation.wwwroot.Resources.General.Title.SubMenu</div>
            <div id="headerMenus" style="background-color:#e0e6e5" class="col-lg-3 headerMenus">@UI_Presentation.wwwroot.Resources.General.Title.ActionMenu</div>
            <div class="col-lg-1"></div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div id="mainMenu" style="border:1px solid #7fcac4" class="col-lg-3 Menus"></div>
            <div id="subMenu" style="border:1px solid #b8d7d4" class="col-lg-3 Menus"></div>
            <div id="menuBottions" style="border:1px solid #e0e6e5;" class="col-lg-3 Menus"></div>
            <div class="col-lg-1"></div>
        </div>
        <div id="menuConfirm" style="display: none;">
            <button onclick="btnAddUserMenuCick()" class="btn btn-primary ladda-button" style="margin: 30px 101px 0px 0px;" data-style="expand-left">
                <span class="ladda-label">@UI_Presentation.wwwroot.Resources.Buttons.Title.Add</span>
                <span class="ladda-spinner"></span><div class="paper-ripple">
                    <div class="paper-ripple__background" style="opacity: 0;">
                    </div>
                    <div class="paper-ripple__waves"></div>
