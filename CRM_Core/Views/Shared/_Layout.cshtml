            <div class="side-menu-container">
                @{
                    List<MenuViewModel> menus = (List<MenuViewModel>)ViewData["MenuItems"];
                    var query = menus.GroupBy(item => item.MenuId)
                    .Select(grp => new
                    {
                        Min = grp.Min(item => item.MenuId),
                        Max = grp.Max(item => item.MenuId)
                    }).FirstOrDefault();

                    string html = "<ul class='metismenu' id='side-menu'>";
                    string style = string.Empty;

                    List<MenuViewModel> getFirstChildParent = null;
                    foreach (var item in menus)
                    {
                        style = string.Empty;
                        if (item.ParentMenuId == null && item.MenuId == query.Min) // اگه منو اصلی هست و  اولین منو هست اینطور بساز
                        {
                            getFirstChildParent = menus.Where(a => a.ParentMenuId == item.MenuId).ToList();
                            style = item.IsActive && item.hasAccess == 1 ? "" : "pointer-events:none;opacity:0.5;";
                            style += !item.IsVisible ? "display:none;" : "";
                            html += "<li style='" + style + "'> <a href='#' class='dropdown-toggle' data-toggle='dropdown'> <i class='" + item.IconClass + "'></i> <span>" + item.Title + "</span> </a>";
                        }
                        else if (item.ParentMenuId == null && item.MenuId != query.Min) // اگه اولین منو نیست ولی منو اصلی هست منوی قبلی رو ببند و منو اصلی جدید اضافه کن
                        {
                            getFirstChildParent = menus.Where(a => a.ParentMenuId == item.MenuId).ToList();
                            style = item.IsActive && item.hasAccess == 1 ? "" : "pointer-events:none;opacity:0.5;";
                            style += !item.IsVisible ? "display:none;" : "";
                            html += "</ul></li><li style='" + style + "'><a href='#' class='dropdown-toggle' data-toggle='dropdown'> <i class='" + item.IconClass + "'> </i> <span>" + item.Title + "</span> </a>";
                        }
                        else if (item.MenuId == getFirstChildParent[0].MenuId) // در این حالت زیر منوها ساخته می شن منتها اگه اولین زیر منو هست باید کد زیر ساخته بشه در غیر اینصورت کد خط بعدی در شرط
                        {
                            style = item.IsActive && item.hasAccess == 1 ? "" : "pointer-events:none;opacity:0.5;";
                            style += !item.IsVisible ? "display:none;" : "";
                            html += "<ul><li style='" + style + "'><a href='#' onclick='" + item.Event + "' class=''> <i class='" + item.IconClass + "'></i><span>" + item.Title + "</span> </a> </li>";
                        }
                        else
                        {
                            style = item.IsActive && item.hasAccess == 1 ? "" : "pointer-events:none;opacity:0.5;";
                            style += !item.IsVisible ? "display:none;" : "";
                            html += "<li style='" + style + "'> <a href='#' onclick='" + item.Event + "' class=''> <i class='" + item.IconClass + "'></i><span>" + item.Title + "</span> </a> </li>";
                        }
                    }

                    html += "</ul></li></ul>";
