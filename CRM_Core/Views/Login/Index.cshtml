@model CRM_Core.DomainLayer.User

@{ Layout = null; }
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <link href="~/plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/bootstrap-rtl/dist/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/plugins/simple-line-icons/css/simple-line-icons.min.css" rel="stylesheet" />
    <link href="~/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/plugins/paper-ripple/dist/paper-ripple.min.css" rel="stylesheet" />
    <link href="~/plugins/iCheck/skins/square/_all.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/colors.css" rel="stylesheet" />

    <script src="~/js/jquery-1.12.4.min.js"></script>
    <script src="~/plugins/jquery-migrate/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/js/holder.js"></script>
    <script src="~/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/plugins/paper-ripple/dist/PaperRipple.min.js"></script>
    <script src="~/plugins/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script src="~/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/src/localization/messages_fa.js"></script>
    <script src="~/js/core.js"></script>

    <script src="~/js/General.js"></script>
    <script src="~/js/pages/login.js"></script>

</head>
<body class="fix-header active-ripple theme-blue">

    <div class="fixed-modal-bg"></div>
    <div class="modal-page shadow" style="border-radius:51px ;box-shadow: 7px 7px 7px -1px gray;">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="logo-con m-t-10 m-b-10">
                        <img src="~/image/login/lock.png" style="height:118px !important" class="center-block img-responsive">
                    </div>
                    <h2 class="text-center m-b-20">@UI_Presentation.wwwroot.Resources.General.Title.LoginIntoApplication</h2>
                    <hr>
                    <form id="form" class="m-t-30 m-b-30" asp-action="Index" asp-controller="Home" method="get" role="form">
                        <div class="form-group">
                            <label for="" class="sr-only">@UI_Presentation.wwwroot.Resources.General.Title.UserName</label>
                            <div class="input-group round">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                <input asp-for="UserName" style="text-align:right" id="UserName" class="form-control ltr text-left" type="text" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">@UI_Presentation.wwwroot.Resources.General.Title.Password</label>
                            <div class="input-group round">
                                <span class="input-group-addon">
                                    <i class="icon-key"></i>
                                </span>
                                <input asp-for="Password" style="text-align:right" id="Password" class="form-control ltr text-left" type="password" required>
                            </div>
                        </div>

                        <a asp-controller="Home" asp-action="Index" >
                            <input class="btn btn-info btn-round btn-block" type="submit" value="@UI_Presentation.wwwroot.Resources.General.Title.Login" />
                        </a>
                    </form>
                    <hr class="m-b-30">
                </div><!-- /.col-md-12 -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.modal-page -->
    <!-- END WRAPPER -->
    <!-- BEGIN JS -->
    <script src="assets/js/jquery-1.12.4.min.js"></script>
    <script src="assets/plugins/jquery-migrate/jquery-migrate-1.2.1.min.js"></script>
    <script src="assets/js/holder.js"></script>
    <script src="assets/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="assets/plugins/paper-ripple/dist/PaperRipple.min.js"></script>
    <script src="assets/plugins/sweetalert2//dist/sweetalert2.min.js"></script>
    <script src="assets/plugins/iCheck/icheck.min.js"></script>
    <script src="assets/plugins/iCheck/icheck.min.js"></script>
    <script src="assets/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="assets/plugins/jquery-validation/src/localization/messages_fa.js"></script>
    <script src="assets/js/core.js"></script>

    <script src="assets/js/pages/login.js"></script>
</body>
</html>

<script>
    var isValidUser = '@ViewBag.isValidUser';
    var message = '@UI_Presentation.wwwroot.Resources.Mesages.UserNamePasswordIsNotValid';
    var title = '@UI_Presentation.wwwroot.Resources.General.Title.LoginError';

    if (isValidUser == 'False') {
        swal(
            title,
            message,
       'error');
    }

    @*if (isHacker == 'False') {
        ErrorMessage('@UI_Presentation.wwwroot.Resources.Mesages.TryLoginMoreThanThreeTimes');
    }*@
</script>